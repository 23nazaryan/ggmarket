<div class="w3l_banner_nav_left">
    <nav class="navbar nav_bottom">
        <div class="navbar-header nav_2">
            <button type="button" class="navbar-toggle collapsed navbar-toggle1" data-toggle="collapse" data-target="#accordion">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="collapse navbar-collapse" id="accordion">
            {{#each categories}}
                {{#if this.childs}}
                    <div class="panel panel-default">
                        <a data-toggle="collapse" data-parent="#accordion" href="#{{this.category._id}}">
                            <div class="panel-heading">
                                <h4 class="panel-title">{{this.category.title}}</h4>
                            </div>
                        </a>
                        <div id="{{this.category._id}}" class="panel-collapse collapse">
                            <div class="panel-body">
                                <ul>
                                    {{#each this.childs}}
                                        <a href="/products/{{_id}}"><li>{{title}}</li></a>
                                    {{/each}}
                                </ul>
                            </div>
                        </div>
                    </div>
                {{/if}}
            {{/each}}
        </div>
    </nav>
</div>