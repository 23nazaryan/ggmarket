<section class="wrapper">
    <div class="row mt">
        <div class="col-md-12">
            <div class="content-panel">
                <table class="table table-striped table-advance table-hover">
                    <h4><i class="fa fa-angle-right"></i> {{title}}</h4>
                    <hr>
                    <thead>
                    <tr>
                        <th>Հեռ</th>
                        <th>Հասցե</th>
                        <th>Պատվիրվել է</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#if orders.length}}
                        {{#each orders}}
                            <tr>
                                <td>{{tel}}</td>
                                <td>{{address}}</td>
                                <td>{{createdAt}}</td>
                                <td>{{count}}</td>
                                <td>
                                    <a href="/admin/orders/view/{{_id}}" class="btn btn-success btn-xs"><i class="fa fa-eye"></i></a>
                                    <a href="/admin/orders/edit/{{_id}}" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                                    <a href="/admin/orders/delete/{{_id}}" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i></a>
                                </td>
                            </tr>
                        {{/each}}
                    {{/if}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>