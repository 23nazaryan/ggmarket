<section class="wrapper">
    <div class="row mt">
        <div class="col-md-12">
            <div class="content-panel">
                <table class="table table-striped table-advance table-hover">
                    <h4><i class="fa fa-angle-right"></i> {{title}}</h4>
                    <a class="btn btn-success" style="margin-left: 20px;" href="/admin/products/create">Ավելացնել</a>
                    <div class="col-sm-3">
                        <select class="form-control category-select" id="products-category" data-id="{{categoryId}}">
                            <option value="0">Բոլոր</option>
                            {{#each categories}}
                                <option id="{{_id}}" value="{{_id}}">{{title}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <hr>
                    <thead>
                    <tr>
                        <th>Անուն</th>
                        <th>Գին</th>
                        <th>Զեղչ</th>
                        <th>Նոր գին</th>
                        <th>Վաճառքի տեսակ</th>
                        <th>Քանակ</th>
                        <th>Թոփ</th>
                        <th>Դիտումներ</th>
                        <th>Բաժին</th>
                        <th>Նկար</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#if products.length}}
                        {{#each products}}
                            <tr>
                                <td>{{title}}</td>
                                <td>{{price}}</td>
                                <td>
                                    {{#if is_sale}}
                                        Այո
                                    {{else}}
                                        Ոչ
                                    {{/if}}
                                </td>
                                <td>{{new_price}}</td>
                                <td>
                                    {{#if sale_type}}
                                        Քանակով
                                    {{else}}
                                        Կշիռով
                                    {{/if}}
                                </td>
                                <td>{{count}}</td>
                                <td>
                                    {{#if is_top}}
                                        Այո
                                    {{else}}
                                        Ոչ
                                    {{/if}}
                                </td>
                                <td>{{views}}</td>
                                <th>{{category_id.title}}</th>
                                <td style="width: 400px;">
                                    <img src="/images/products/{{img}}" style="width: 30%;">
                                </td>
                                <td>
                                    <a href="/admin/products/edit/{{_id}}" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                                    <a href="/admin/products/delete/{{_id}}" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i></a>
                                </td>
                            </tr>
                        {{/each}}
                    {{/if}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>