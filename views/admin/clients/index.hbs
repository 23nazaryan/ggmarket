<section class="wrapper">
    <div class="row mt">
        <div class="col-md-12">
            <div class="content-panel">
                <table class="table table-striped table-advance table-hover">
                    <h4><i class="fa fa-angle-right"></i> {{title}}</h4>
                    <hr>
                    <thead>
                    <tr>
                        <th>Բժիշկ</th>
                        <th>Անուն</th>
                        <th>Ազգանուն</th>
                        <th>Տարիք</th>
                        <th>Հեռ։</th>
                        <th>Էլ․ հասցե</th>
                        <th>Ամսաթիվ</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#if clients.length}}
                        {{#each clients}}
                            <tr>
                                <td>{{employee_id.name}}</td>
                                <td>{{name}}</td>
                                <td>{{surname}}</td>
                                <td>{{age}}</td>
                                <td>
                                    <a href="javascript:;">{{tel}}</a>
                                </td>
                                <td>
                                    <a href="javascript:;">{{email}}</a>
                                </td>
                                <td>{{date}}</td>
                                <td>
                                    <a href="admin/{{_id}}/blacklist" class="btn btn-warning btn-xs"><i class="fa fa-user-times"></i></a>
                                    <a href="admin/{{_id}}/delete" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i></a>
                                </td>
                            </tr>
                        {{/each}}
                    {{/if}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>