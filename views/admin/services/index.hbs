<section class="wrapper">
    <div class="row mt">
        <div class="col-md-12">
            <div class="content-panel">
                <table class="table table-striped table-advance table-hover">
                    <h4><i class="fa fa-angle-right"></i> {{title}}</h4>
                    <a class="btn btn-success" style="margin-left: 20px;" href="services/create">Ավելացնել</a>
                    <hr>
                    <thead>
                    <tr>
                        <th>Նկար</th>
                        <th>Ծառայության անվանում</th>
                        <th>Գին</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#if services.length}}
                        {{#each services}}
                            <tr>
                                <td style="width: 400px;">
                                    <img src="/images/services/{{_id}}.jpg" alt="{{title}}" style="width: 50%;">
                                </td>
                                <td>
                                    <a href="javascript:;">{{title}}</a>
                                </td>
                                <td>{{price}} </td>
                                <td>
                                    <a href="services/{{_id}}/edit" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                                    <a href="services/{{_id}}/delete" class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></a>
                                </td>
                            </tr>
                        {{/each}}
                    {{/if}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>