<section class="wrapper">
    <h3><i class="fa fa-angle-right"></i> {{title}}</h3>
    <div class="row mt">
        <div class="col-lg-12">
            <div class="form-panel">
                <div class="form">
                    <form class="cmxform form-horizontal style-form" method="POST" action="{{action}}" enctype="multipart/form-data">
                        <input type="hidden" class="csrf" name="_csrf" value="{{csrf}}">
                        <div class="form-group">
                            <label for="title" class="control-label col-lg-2">Ծառայության անվանում</label>
                            <div class="col-lg-10">
                                <input class="form-control" id="title" name="title" type="text" value="{{service.title}}" required/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="descr" class="control-label col-lg-2">Նկարագրություն</label>
                            <div class="col-lg-10">
                                <textarea class="form-control" id="descr" name="descr" required>{{service.descr}}</textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="price" class="control-label col-lg-2">Գին</label>
                            <div class="col-lg-10">
                                <input class="form-control" id="price" name="price" type="text" value="{{service.price}}" required/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="img" class="control-label col-lg-2">Նկար</label>
                            <div class="col-lg-5">
                                <input class="form-control" id="img" name="img" type="file" />
                            </div>
                        </div>

                        {{#if image}}
                            <img id="image_upload_preview" src="/images/services/{{service._id}}.jpg" alt="{{service.title}}" style="width: 200px; margin-bottom: 15px" />
                        {{else}}
                            <img id="image_upload_preview" style="width: 200px; margin-bottom: 15px" />
                        {{/if}}

                        <div class="form-group">
                            <div class="col-lg-5">
                                <button type="submit" class="btn btn-success">Պահպանել</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>