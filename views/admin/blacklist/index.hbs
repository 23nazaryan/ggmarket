<section class="wrapper">
    <div class="row mt">
        <div class="col-md-12">
            <div class="content-panel">
                <table class="table table-striped table-advance table-hover">
                    <h4><i class="fa fa-angle-right"></i> {{title}}</h4>
                    <a class="btn btn-success" style="margin-left: 20px;" href="blacklist/create">Ավելացնել</a>
                    <hr>
                    <thead>
                    <tr>
                        <th>Հեռ։</th>
                        <th>Էլ․ հասցե</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#if blacklist.length}}
                        {{#each blacklist}}
                            <tr>
                                <td>
                                    <a href="javascript:;">{{tel}}</a>
                                </td>
                                <td>
                                    <a href="javascript:;">{{email}}</a>
                                </td>
                                <td>
                                    <a href="blacklist/{{_id}}/edit" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                                    <a href="blacklist/{{_id}}/delete" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i></a>
                                </td>
                            </tr>
                        {{/each}}
                    {{/if}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>