<section class="wrapper">
    <h3><i class="fa fa-angle-right"></i> {{title}}</h3>
    <div class="row mt">
        <div class="col-lg-12">
            <div class="form-panel">
                <div class="form">
                    <form class="cmxform form-horizontal style-form" method="POST" action="{{action}}" enctype="multipart/form-data">
                        <input type="hidden" class="csrf" name="_csrf" value="{{csrf}}">
                        <input type="hidden" name="type" value="{{type}}">

                        <div class="form-group">
                            <label for="title" class="control-label col-lg-2">Անուն</label>
                            <div class="col-lg-5">
                                <input class="form-control" id="title" name="title" type="text" value="{{category.title}}"/>
                            </div>
                        </div>

                        {{#if type}}
                            <div class="form-group">
                                <label for="parent_id" class="control-label col-lg-2">Գլխավոր բաժին</label>
                                <div class="col-lg-5">
                                    <select class="form-control category-select" id="parent_id" name="parent_id" data-id="{{@root.category.parent_id}}">
                                        {{#each categories}}
                                            <option id="{{_id}}" value="{{_id}}">{{title}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="descr" class="control-label col-lg-2">Նկարագրություն</label>
                                <div class="col-lg-5">
                                    <textarea class="form-control" id="descr" rows="10" name="descr">{{category.descr}}</textarea>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="is_top" class="control-label col-lg-2">Թոփ</label>
                                <div class="col-lg-5">
                                    <input class="checkbox" type="checkbox" id="is_top" name="is_top" {{#if category.is_top}}value="1" checked{{/if}}>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="for_slider" class="control-label col-lg-2">Սլայդեր</label>
                                <div class="col-lg-5">
                                    <input class="checkbox" type="checkbox" id="for_slider" name="for_slider" {{#if category.for_slider}}value="1" checked{{/if}}>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="img" class="control-label col-lg-2">Նկար</label>
                                <div class="col-lg-5">
                                    <input class="form-control" id="img" name="img" type="file" />
                                </div>
                            </div>

                            <div class="col-5" style="margin: 50px">
                                {{#if category.img}}
                                    <img id="image_upload_preview" src="/images/categories/{{category.img}}" style="width: 200px; margin-bottom: 15px" />
                                {{else}}
                                    <img id="image_upload_preview" style="width: 200px; margin-bottom: 15px" />
                                {{/if}}
                            </div>
                        {{/if}}

                        <div class="form-group">
                            <div class="col-lg-5">
                                <button type="submit" class="btn btn-success">Պահպանել</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
