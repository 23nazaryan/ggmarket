<div class="w3l_banner_nav_right">
    <div class="privacy about">
        <h3>{{title}}</h3>
        <div class="checkout-right">
            <h4>Ձեր զամբյուղում կա: <span>{{products.length}} ապրանք</span></h4>
            <table class="timetable_sub">
                <thead>
                <tr>
                    <th>Ապրանքի նկար</th>
                    <th>Քանակ</th>
                    <th>Ապրանքի անուն</th>
                    <th>Գին</th>
                    <th>Հեռացնել</th>
                </tr>
                </thead>
                <tbody>
                    {{#if products}}
                        {{#each products}}
                            <tr class="rem" data-id="{{id}}">
                                <td class="invert-image" style="width: 25%">
                                    <a href="/product/{{id}}">
                                        <img src="/images/products/{{img}}" alt="{{title}}" class="img-responsive">
                                    </a>
                                </td>
                                <td class="invert">
                                    <div class="quantity">
                                        <div class="quantity-select" data-product-id="{{id}}">
                                            <div class="entry value-minus">-</div>
                                            <div class="entry value">{{count}}</div>
                                            <div class="entry value-plus">+</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="invert" style="width: 25%">Lorem ipsum dolor sit amet. {{#if type}}({{type}}){{/if}}</td>
                                <td class="invert" data-product-id="{{id}}">{{amount}}</td>
                                <td class="invert" style="width: 5%">
                                    <div class="rem">
                                        <div class="delete" data-id="{{id}}"></div>
                                    </div>
                                </td>
                            </tr>
                        {{/each}}
                    {{/if}}
                </tbody>
            </table>
        </div>
        <div class="checkout-left">
            <div class="col-md-4 checkout-left-basket">
                <ul>
                    <li style="color: #1a1a1a; font-size: 23px;">Ընդհանուր <i>-</i> <strong class="total-amount">{{totalAmount}} ։դրամ</strong></li>
                </ul>
            </div>

            <div class="col-md-8 address_form_agile">
                <h4>Լրացրեք Ձեր տվյալները</h4>
                <form action="/order" method="post" class="creditly-card-form agileinfo_form">
                    <input type="hidden" class="csrf" name="_csrf" value="{{csrf}}">
                    <section class="creditly-wrapper wthree, w3_agileits_wrapper">
                        <div class="information-wrapper">
                            <div class="first-row form-group">
                                <div class="w3_agileits_card_number_grids">
                                    <div class="w3_agileits_card_number_grid_left">
                                        <div class="controls">
                                            <label for="tel" class="control-label">Հեռ:</label>
                                            <input class="form-control" id="tel" name="tel" type="text" placeholder="077123456">
                                        </div>
                                    </div>
                                    <div class="w3_agileits_card_number_grid_right">
                                        <div class="controls">
                                            <label for="address" class="control-label">Հասցե: </label>
                                            <input class="form-control" id="address" name="address" type="text" placeholder="փողոց/թաղամաս - շենք/բնակարան">
                                        </div>
                                    </div>
                                    <div class="clear"> </div>
                                </div>
                            </div>
                            <button class="submit check_out">Պատվիրել</button>
                        </div>
                    </section>
                    <products>
                        {{#if products}}
                            {{#each products}}
                                <div data-product-id="{{id}}" style="display: none;">
                                    <input type="hidden" name="products[{{@key}}][id]" value="{{id}}" />
                                    <input type="hidden" name="products[{{@key}}][title]" value="{{title}}" />
                                    <input type="hidden" name="products[{{@key}}][img]" value="{{img}}" />
                                    <input type="hidden" name="products[{{@key}}][type]" value="{{type}}" />
                                    <input type="hidden" id="count" name="products[{{@key}}][count]" value="{{count}}"/>
                                    <input type="hidden" id="maxCount" name="products[{{@key}}][maxCount]" value="{{maxCount}}"/>
                                    <input type="hidden" id="amount" name="products[{{@key}}][amount]" value="{{amount}}" />
                                    <input type="hidden" id="basePrice" name="products[{{@key}}][basePrice]" value="{{basePrice}}" />
                                </div>
                            {{/each}}
                        {{/if}}
                    </products>
                </form>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>